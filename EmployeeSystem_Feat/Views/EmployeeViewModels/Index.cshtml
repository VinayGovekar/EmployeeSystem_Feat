@model System.Data.DataTable;
@{
    ViewData["Title"] = "List of Employees";
}

<div>
    <h1 class="text-center">@ViewData["Title"]</h1>
</div>


<table class="table-bordered">
    <thead>
        <tr>
            <th>
                EmpId
            </th>
            <th>
                Name
            </th>
            <th>
                Salary
            </th>
            <th>
                Manager
            </th>
            <th>
                <a asp-action="AddOrEdit">Add New Employee</a>
            </th>
        </tr>
    </thead>
    <tbody>
@for (int i=0;i<Model.Rows.Count;i++)
{
        <tr>
                <td>
                    @Model.Rows[i]["EmpId"]
                </td>
            <td>
                @Model.Rows[i]["EmpName"]
            </td>
            <td>
                    @Model.Rows[i]["Salary"]
            </td>
            <td>
                    @Model.Rows[i]["Manager"]
            </td>
            <td>
                    <a asp-action="AddOrEdit" asp-route-id="@Model.Rows[i]["EmpId"]">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@Model.Rows[i]["EmpId"]">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
